# This file enforces consistent coding styles among various editors. Please go
# to http://editorconfig.org and download the necessary plugin for your editor
# and comply with the project's style.

# Top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
